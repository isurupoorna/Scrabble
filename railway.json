{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build:server && npm run build:client"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "CORS_ORIGIN": "$RAILWAY_STATIC_URL",
        "BOT_DIFFICULTY": "advanced",
        "MAX_CONCURRENT_GAMES": "50",
        "DICTIONARY_FILE": "./CSW24.txt"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "BOT_DIFFICULTY": "basic",
        "MAX_CONCURRENT_GAMES": "10"
      }
    }
  },
  "plugins": [
    {
      "name": "redis",
      "plan": "hobby"
    },
    {
      "name": "postgresql",
      "plan": "hobby"
    }
  ],
  "networking": {
    "allowPublic": true,
    "serviceDomains": {
      "scrabble-server": {
        "serviceId": "$RAILWAY_SERVICE_ID"
      }
    }
  }
}